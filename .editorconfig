root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
quote_type = double
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 85

[*.ts]
curly_bracket_next_line = false
indent_brace_style = BSD KNF
spaces_around_brackets = outside
spaces_around_operators = true
